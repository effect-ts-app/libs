{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build/esm",
    "declarationDir": "build/dts",
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "module": "ES6",
    "target": "ES2018",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/es6.tsbuildinfo",
    "removeComments": false,
    "plugins": [
      {
        "transform": "@effect-ts/tracing-plugin",
        "moduleMap": {
          "^src/(.*)": "(@effect-ts/monocle): _src/$1"
        }
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}