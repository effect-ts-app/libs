{
    "extends": "../../tsconfig.lib.json",
    "compilerOptions": {
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "rootDir": "./src",
        "noEmit": false,
        "tsPlusConfig": "../../tsplus.config.json",
        "tsPlusTypes": [
            "./vendor/effect-data-tsplus.json",
            "./vendor/effect-io-tsplus.json",
            "./vendor/effect-match-tsplus.json",
            "./vendor/effect-stm-tsplus.json",
            "./vendor/effect-stream-tsplus.json",
            "./vendor/fp-ts-optic-tsplus.json",
            "./vendor/effect-schema-tsplus.json",
            "./vendor/effect-platform-tsplus.json",
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "build",
        "lib",
        "dist",
        "**/*.d.ts.map"
    ]
}