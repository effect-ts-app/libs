{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./_esm",
        "noEmit": false,
        "jsx": "react",
        "tsPlusConfig": "../../tsplus.config.json",
        "baseUrl": "./",
        "rootDir": "./_src",
        "paths": {
            "@effect-ts-app/core/*": [
                "../core/_src/*"
            ],
            "@effect-ts-app/core": [
                "../core/_src"
            ],
            "@effect-ts-app/infra/*": [
                "../infra/_src/*"
            ],
            "@effect-ts-app/infra": [
                "../infra/_src"
            ],
            "@effect-ts-app/fluent/*": [
                "../fluent/_src/*"
            ],
            "@effect-ts-app/fluent": [
                "../fluent/_src"
            ],
            "@effect-ts-app/prelude/*": [
                "../prelude/*"
            ],
            "@effect-ts-app/prelude": [
                "../prelude"
            ]
        },
    },
    "include": [
        "./_src"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "build",
        "lib",
        "dist",
        "**/*.d.ts.map"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}